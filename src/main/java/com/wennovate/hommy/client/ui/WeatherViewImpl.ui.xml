<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel>
		<div id="weather">
			<div class="current">
				<div class="left">
					<p ui:field="city" class="city"/>
					<p ui:field="currentTemperature" class="current-temperature" />
					<p ui:field="sunrise" />
					<p ui:field="sunset" />
				</div>
				<div class="right">
					<g:Image ui:field="weatherIcon" />
					<p ui:field="weatherDescription" class="description" />
					<p ui:field="rain" class="rain" />
					<p ui:field="wind" class="wind" />
					<p ui:field="clouds" class="clouds" />
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>